{
  "name": "react-image-previewer",
  "version": "1.1.6",
  "description": "An exquisite React photo preview component",
  "author": "MinJieLiu",
  "license": "Apache-2.0",
  "repository": "https://github.com/big-camel/react-image-previewer.git",
  "source": "src/index.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./ui": {
      "import": {
        "types": "./dist/ui/index.d.ts",
        "default": "./dist/ui/index.mjs"
      },
      "require": {
        "types": "./dist/ui/index.d.ts",
        "default": "./dist/ui/index.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "ui": [
        "dist/ui/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "keywords": [
    "react",
    "react component",
    "react photo",
    "react-image-previewer",
    "photo",
    "image",
    "photo preview",
    "image preview",
    "gallery",
    "carousel"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^17.x",
    "@types/react-dom": "^17.x",
    "@types/styled-components": "5.1.26",
    "jest": "^27.5.1",
    "react": "^17.x",
    "react-dom": "^17.x",
    "tailwindcss": "^3.2.4",
    "tsup": "^6.1.2",
    "twin.macro": "3.0.1",
    "typescript": "latest",
    "eslint-config-viewer": "0.0.0",
    "jest-presets": "0.0.0",
    "tailwind-config": "0.0.0",
    "tsconfig": "0.0.0",
    "tsup-config": "0.0.0",
    "prettier-config": "0.0.0"
  },
  "dependencies": {
    "styled-components": "5.3.5"
  },
  "lint-staged": {
    "src/**/*.{json,ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "scripts": {
    "test": "jest",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{json,ts,tsx,js,jsx}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  }
}